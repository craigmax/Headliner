<?xml version="1.0" encoding="utf-8"?>
<!-- Layout file for recycler view -->

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:text="@string/rated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblRating"
            app:layout_constraintTop_toBottomOf="@+id/txtSummary"
            android:textSize="12sp" app:layout_constraintStart_toEndOf="@+id/txtOpening"
            android:layout_marginStart="36dp"/>
    <ImageView
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgMovie" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.027" android:contentDescription="@string/movie_icon"/>
    <TextView
            android:text="@string/movie_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtMovieTitle" app:layout_constraintStart_toEndOf="@+id/imgMovie"
            android:layout_marginStart="8dp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:textSize="18sp" android:textStyle="bold"
    />
    <TextView
            android:text="@string/short_summary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtSummary" app:layout_constraintStart_toEndOf="@+id/imgMovie"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/txtMovieTitle"/>
    <Space
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.392"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/space"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtOpening"/>
    <TextView
            android:text="@string/opens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblOpening"
            app:layout_constraintTop_toBottomOf="@+id/txtSummary" app:layout_constraintStart_toEndOf="@+id/imgMovie"
            android:layout_marginStart="8dp" android:textSize="12sp"/>
    <TextView
            android:text="@string/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtOpening"
            app:layout_constraintTop_toBottomOf="@+id/txtSummary" app:layout_constraintStart_toEndOf="@+id/lblOpening"
            android:textSize="12sp" android:textStyle="bold|italic" android:layout_marginStart="12dp"/>
    <TextView
            android:text="@string/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtRating"
            app:layout_constraintTop_toBottomOf="@+id/txtSummary" app:layout_constraintStart_toEndOf="@+id/lblRating"
            android:layout_marginStart="12dp" android:textSize="12sp" android:textStyle="bold|italic"/>
</android.support.constraint.ConstraintLayout>
